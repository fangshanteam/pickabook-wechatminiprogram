/* pages/bookshelf/bookshelf.wxss */

.container {
  box-shadow: 0 2px 4px 0 rgba(112, 123, 142, 0.57);
  padding-bottom:10px;

}
.header{
    position: relative;
    height: 500rpx;

    padding:50rpx 60rpx 60rpx 40rpx;
    box-sizing: border-box;
    font-size: 45rpx;
    color: #fff;  
    margin-bottom: 80rpx;
}
.libinfo-avatar {
  width: 100%;
  height: 100%;
  margin: 10rpx;
  position: center;
}
.library-name {
  color: black;
  display: flex;
  flex-direction: column;
  align-items: center;

}
.button-sp-area{
    margin: 0 auto;
    padding-top: 15px;
    width: 50%;
    margin-bottom: 60rpx;
}
short-desc {
  width: 250px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.custom{
  display:block;

  
}
.btn{
  margin-right: 10px;
  margin-bottom: 5px;
}
.footer-box {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
}
.footer-box .share-lib {
  text-align: center;
  height: 100%;
  width: 100%;
  line-height: 100rpx;
  font-size: 32rpx;
  position: absolute;
  background-color: #D03232;


}
.share-icon {
  height: 40rpx;
  width: 40rpx;
  position: absolute;
  left: 32%;
  top: 29%; 
}
.share-text {
  position: absolute;
  right: 32%;
  color: white;
}
.no-more-goods{
  text-align: center;
  font-size: 24rpx;
  padding-bottom:48rpx; 
  color: #999;
  margin-top: 65rpx;
}